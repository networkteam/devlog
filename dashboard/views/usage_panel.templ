package views

import "fmt"

templ UsagePanel() {
	{{ opts := MustGetHandlerOptions(ctx) }}
	<div
		id="usage-panel"
		class="flex items-center gap-4 text-sm text-neutral-400"
		hx-get={ fmt.Sprintf("%s/stats", opts.PathPrefix) }
		hx-trigger="load, every 5s"
		hx-swap="innerHTML"
	>
		<span class="text-neutral-500">Loading...</span>
	</div>
}

templ UsagePanelContent(memory string, sessions int, maxSessions int) {
	<div class="flex items-center gap-4 text-sm">
		<div class="flex items-center gap-1.5" title="Memory usage">
			@iconDatabase()
			<span class="text-neutral-300">{ memory }</span>
		</div>
		<div class="flex items-center gap-1.5" title="Active sessions">
			@iconUsers()
			<span class="text-neutral-300">
				if maxSessions > 0 {
					{ fmt.Sprintf("%d/%d", sessions, maxSessions) }
				} else {
					{ fmt.Sprintf("%d", sessions) }
				}
			</span>
		</div>
	</div>
}

